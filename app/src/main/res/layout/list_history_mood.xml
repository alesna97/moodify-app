<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="700px"
    android:layout_height="300px"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    android:layout_marginLeft="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_happy"
        android:id="@+id/bg_img">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/overlay_pink_history"
            android:orientation="horizontal"
            android:id="@+id/bg_overlay">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_mood_history"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:id="@+id/ic_mood"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_marginRight="16dp">
                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:text="Happy"
                android:textColor="@color/white"
                android:textSize="26dp"
                android:layout_gravity="right"
                    android:id="@+id/mood"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Date"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:layout_gravity="right"
                    android:id="@+id/date"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="right">
                    <TextView
                        android:drawableLeft="@drawable/ic_favorite_white_24dp"
                        android:drawablePadding="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="70"
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        android:layout_gravity="right"
                        android:id="@+id/heartRate"
                        android:layout_marginRight="8dp"/>
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Time"
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        android:layout_gravity="right"
                        android:id="@+id/time"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>