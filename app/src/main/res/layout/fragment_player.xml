<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayerFragment"
    android:background="#f5f5f5">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        >
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Moodify"
            android:textSize="15dp"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/montserrat"/>

        <TextView
            android:id="@+id/NowPlaying"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Now Playing"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/montserrat"
            />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >

            <com.yinglan.shadowimageview.ShadowImageView
                android:id="@+id/CoverImage"
                android:layout_width="300dp"
                android:layout_height="300dp"
                app:shadowRound="8dp"
                app:shadowColor="@color/colorAccent"
                app:shadowSrc="@drawable/ic_music_note_black_24dp"
                />
            <com.github.ybq.android.spinkit.SpinKitView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/spin_kit"
                style="@style/SpinKitView.Wave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:SpinKit_Color="@color/colorPrimary"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/Status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disconnected"
                android:textSize="15dp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/montserrat"
                android:layout_marginBottom="30dp"/>
            <TextView
                android:id="@+id/Title"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textColor="#000000"
                android:textSize="24dp"
                android:textAlignment="center"
                android:fontFamily="@font/montserrat"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"/>

            <TextView
                android:id="@+id/Artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Artist"
                android:textSize="15dp"
                android:fontFamily="@font/montserrat"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/startDuration"
                    android:text="0:00"
                    android:fontFamily="@font/montserrat"/>
                <SeekBar
                    android:layout_width="300dp"
                    android:layout_height="20dp"
                    android:thumbTint="@color/colorPrimary"
                    android:progressBackgroundTint="@color/colorPrimary"
                    android:id="@+id/seekbar"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/endDuration"
                    android:text="0:00"
                    android:fontFamily="@font/montserrat"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp">

                <ImageButton
                    android:id="@+id/ShuffleButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/rounded"
                    android:src="@drawable/btn_shuffle"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    />

                <ImageButton
                    android:id="@+id/PrevButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/rounded"
                    android:src="@drawable/btn_prev"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"/>

                <ImageButton
                    android:id="@+id/PlayButton"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/rounded_pink"
                    android:src="@drawable/btn_play"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"/>

                <ImageButton
                    android:id="@+id/NextButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/rounded"
                    android:src="@drawable/btn_next"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"/>
                <ImageButton
                    android:id="@+id/RepeatButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/rounded"
                    android:src="@drawable/btn_repeat"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/ConnectButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/rounded"
                    android:src="@drawable/btn_connect"
                    android:layout_margin="5dp"/>

                <ImageButton
                    android:id="@+id/PauseButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/rounded"
                    android:src="@drawable/btn_scan"
                    android:layout_margin="5dp"/>

            </LinearLayout>
        </LinearLayout>
</FrameLayout>